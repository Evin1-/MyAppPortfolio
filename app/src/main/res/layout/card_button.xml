<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">
    <LinearLayout
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_button_status_img"
                android:src="@drawable/autorenew"
                android:layout_gravity="bottom"
                android:layout_width="8dp"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/card_button_status_txt"
                android:textSize="9sp"
                android:text="@string/status_non_started"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/card_button_name_txt"
            android:textSize="15sp"
            android:text="@string/project_name_movies"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/card_button_more_txt"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"
            android:text="@string/option_view_more"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>